@model Products

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SupplyAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SupplierKey" class="control-label"></label>
                <input asp-for="SupplierKey" class="form-control" />
                <span asp-validation-for="SupplierKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostSold" class="control-label"></label>
                <input asp-for="CostSold" class="form-control" />
                <span asp-validation-for="CostSold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostBought" class="control-label"></label>
                <input asp-for="CostBought" class="form-control" />
                <span asp-validation-for="CostBought" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityInStorage" class="control-label"></label>
                <input asp-for="QuantityInStorage" class="form-control" />
                <span asp-validation-for="QuantityInStorage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityInDisplay" class="control-label"></label>
                <input asp-for="QuantityInDisplay" class="form-control" />
                <span asp-validation-for="QuantityInDisplay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Supply" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>